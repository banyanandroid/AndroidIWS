<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:weightSum="14"
            >


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_month"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="jan-2019"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_marginRight="5dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_expense"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="10,500"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_marginRight="5dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_approved"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="10,500"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_marginRight="5dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_paid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="10,500"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_marginRight="5dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_pending"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Pending"
                android:layout_weight="2"
                android:gravity="center"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_bill_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Completed"
                android:layout_weight="2"
                android:gravity="center"/>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_download"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="Download"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_weight="2"
                android:background="@drawable/bg_button"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.cardview.widget.CardView>


</LinearLayout>