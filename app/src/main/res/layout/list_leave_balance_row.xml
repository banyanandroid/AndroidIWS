<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_request_item_size"
    android:layout_height="@dimen/dimen_request_item_size"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        >

        <LinearLayout
            android:id="@+id/layout_leave_request"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/text_leave_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="19"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/dimen_horizontal"
                android:layout_marginTop="@dimen/dimen_4"
                />

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medical Leave"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="@dimen/dimen_horizontal"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/text_leave_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24 leaves"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/dimen_horizontal"
                android:layout_marginTop="@dimen/dimen_4"
                android:ellipsize="end"
                android:maxLines="1"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>